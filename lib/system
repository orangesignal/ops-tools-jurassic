#!/bin/bash

TEXT_ESCAPE_START='\e['
TEXT_ESCAPE_END='m'

TEXT_RESET="${TEXT_ESCAPE_START}${TEXT_ESCAPE_END}"
TEXT_BLACK="${TEXT_ESCAPE_START}30${TEXT_ESCAPE_END}"
TEXT_RED="${TEXT_ESCAPE_START}31${TEXT_ESCAPE_END}"
TEXT_GREEN="${TEXT_ESCAPE_START}32${TEXT_ESCAPE_END}"
TEXT_YELLOW="${TEXT_ESCAPE_START}33${TEXT_ESCAPE_END}"
TEXT_BLUE="${TEXT_ESCAPE_START}34${TEXT_ESCAPE_END}"
TEXT_PURPLE="${TEXT_ESCAPE_START}35${TEXT_ESCAPE_END}"
TEXT_CYAN="${TEXT_ESCAPE_START}36${TEXT_ESCAPE_END}"
TEXT_WHITE="${TEXT_ESCAPE_START}37${TEXT_ESCAPE_END}"

function error() { echo -e "$@" 1>&2; }
function abort() { echo -e "$@" 1>&2; exit 1; }

function trace_run() { echo "+ $@"; "$@"; }

function echo_ifneed() {
  if [ "${1}" != '' ]; then
    echo "${1}"
  fi
}
